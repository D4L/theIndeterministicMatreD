<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/rate_meal_message"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="@string/enjoy_dish"/>

    <TextView
        android:id="@+id/chosen_dish"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/rate_meal_message"
        android:textSize="24sp"/>

    <RatingBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/chosen_dish"
        android:layout_centerHorizontal="true"
        android:numStars="5"
        android:progressDrawable="@drawable/rating_star"
        android:stepSize="1"/>

</RelativeLayout>
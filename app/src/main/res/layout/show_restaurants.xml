<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="5dp">

    <LinearLayout
        android:id="@+id/add_restaurant_widget"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/add_restaurant_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/add_restaurant_button_background"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_action_new"/>

        <ImageButton
            android:id="@+id/search_restaurant_button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".5"
            android:background="@drawable/search_restaurant_button_background"
            android:paddingBottom="5dp"
            android:paddingTop="5dp"
            android:src="@drawable/ic_action_search"/>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_restaurant_widget"
        android:background="@drawable/restaurant_widget_text_box_background"
        android:paddingBottom="10dp"
        android:paddingLeft="20dp"
        android:paddingRight="20dp">

        <EditText
            android:id="@+id/restaurant_widget_text_box"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:hint="@string/restaurant_name"/>

    </RelativeLayout>

    <ListView
        android:id="@+id/restaurant_list"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/restaurant_widget_text_box">

    </ListView>

</RelativeLayout>